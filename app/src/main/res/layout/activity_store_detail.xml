<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreDetail">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/backbtn_store_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/back_store_detail"/>

        <TextView
            android:id="@+id/toolbar_nama_toko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budi Store"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/add_cart_toko"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_store_detail"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_120sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/baju" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/image_store"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_name_detail"
                    android:text="Nama Store"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_name_lokasi"
                    android:text="Province"
                    android:padding="5dp"
                    android:paddingStart="0dp"
                    android:textStyle="bold"
                    android:textColor="#D4D4D4"
                    android:textSize="15sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_chat_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#0081A7"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat Penjual"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/chat_penjual"
                            android:layout_marginLeft="30sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/chat_penjual"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/ic_baseline_chat_24"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="@dimen/_95sdp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/black"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <View
            android:layout_width="@dimen/_95sdp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/black"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view1"
            tools:listitem="@layout/produk_list_item"/>
    </RelativeLayout>
</LinearLayout>