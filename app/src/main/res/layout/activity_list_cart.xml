<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".list_cart">

	<ImageView
		android:id="@+id/rounded"
		android:layout_width="0dp"
		android:layout_height="100dp"
		android:src="@drawable/rounded"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		tools:ignore="MissingConstraints,TextContrastCheck" />

	<ImageView
		android:id="@+id/backbtn"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:src="@drawable/backbutton1"
		android:paddingTop="28dp"
		tools:ignore="MissingConstraints"
		/>

	<TextView
		android:id="@+id/textyc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Your Cart"
		android:textColor="@color/white"
		android:textSize="35sp"
		android:fontFamily="sans-serif-medium"
		tools:ignore="MissingConstraints"
		android:paddingLeft="60dp"
		android:paddingTop="1dp"
		/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-medium"
		android:text="You have 1 items in your cart"
		android:textColor="@color/white"
		android:textSize="15sp"
		tools:ignore="MissingConstraints"
		android:paddingLeft="60dp"
		app:layout_constraintTop_toBottomOf="@id/textyc"
		/>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginBottom="15dp"
		android:layout_marginTop="25dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="5dp"
		app:contentPadding="10dp"
		tools:context=".Library"
		tools:ignore="MissingConstraints"
		app:layout_constraintTop_toBottomOf="@id/rounded">

		<RelativeLayout
			android:id="@+id/layout1"
			android:layout_width="match_parent"
			android:layout_height="96dp"
			android:orientation="horizontal"
			app:layout_constraintBottom_toBottomOf="@id/textyc"
			tools:ignore="MissingConstraints">


			<ImageView
				android:id="@+id/descVideo1"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="20dp"
				android:contentDescription="produk"
				android:src="@drawable/produk"
				tools:ignore="ContentDescription" />

			<TextView
				android:id="@+id/counter"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="127dp"
				android:layout_marginTop="60dp"
				android:gravity="center"
				android:text="1"
				android:textSize="15sp" />

			<TextView
				android:id="@+id/judul"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="100dp"
				android:layout_marginTop="5dp"
				android:text="Executive Pants"
				android:textColor="@color/black"
				android:textSize="15sp" />

			<TextView
				android:id="@+id/harga"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="100dp"
				android:layout_marginTop="29dp"
				android:text="Rp. 100.000"
				android:textColor="@color/black"
				android:textSize="20sp" />

			<ImageView
				android:id="@+id/minus"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="99dp"
				android:layout_marginTop="60dp"
				android:background="@drawable/minus"
				android:contentDescription="minus"
				tools:ignore="ContentDescription" />

			<ImageView
				android:id="@+id/plus"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="185dp"
				android:layout_marginTop="60dp"
				android:background="@drawable/plus"
				android:contentDescription="plus"
				android:onClick="btnCartonClick" />

			<CheckBox
				android:id="@+id/checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="320dp"
				android:layout_marginTop="18dp" />
		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="80dp"
		android:fontFamily="sans-serif-medium"
		android:text="Total"
		android:paddingLeft="27dp"
		android:textColor="@color/black"
		android:textSize="35sp"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:ignore="MissingConstraints" />


	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="84dp"
		android:fontFamily="sans-serif-medium"
		android:text="Rp. 100.000"
		android:textColor="@color/black"
		android:textSize="30sp"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:ignore="MissingConstraints"
		android:paddingLeft="220dp"/>


	<Button
		android:id="@+id/buttonpayment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginBottom="28dp"
		app:backgroundTint="@color/bluetheme"
		android:background="@drawable/button_round"
		android:text="Continue to Payment"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:ignore="MissingConstraints,TextContrastCheck" />

	<TextView
		android:id="@+id/store"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-medium"
		android:text="Slebew Store"
		android:textColor="@color/black"
		android:textSize="15sp"
		tools:ignore="MissingConstraints"
		app:layout_constraintTop_toBottomOf="@id/rounded"
		android:layout_marginTop="5dp"
		android:paddingLeft="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
